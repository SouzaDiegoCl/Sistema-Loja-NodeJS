<%- include ('partials/header.ejs') %>
    <div id="produtosContainer">
        <h1 class="pageTitle">PRODUTOS - NOVO</h1>
        <div class="table-responsive">
            <form action="/produtos/new" method="post">
                <table class="table table-striped table-bordered  table-hover">
                    <thead class="thead-light ">
                        <tr>
                            <th class="text-center">Nome do Produto</th>
                            <th class="text-center">Preço</th>
                            <th class="text-center">Categoria</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <input class="form-control" type="text" name="nome" id="" placeholder="Nome do Produto">
                            </td>
                            <td>
                                <input class="form-control" type="text" name="preco" id=""
                                    placeholder="Preço do Produto">
                            </td>
                            <td>
                                <input class="form-control" type="text" name="categoria" id=""
                                    placeholder="Categoria do Produto">
                            </td>
                        </tr>
                    </tbody>
                    <tfoot class="text-center">
                        <tr>
                            <td colspan="6">
                                <input class="btn btn-success" type="submit" value="ADICIONAR NOVO PRODUTO">
                            </td>
                        </tr>
                        <tr>
                            <td colspan="6">
                                <a href="/produtos" class="btn btn-danger">Voltar</a>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </form>
        </div>
    </div>
    <%- include ('partials/footer.ejs') %>