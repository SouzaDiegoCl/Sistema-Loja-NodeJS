<%- include ('partials/header.ejs') %>
    <div id="produtosContainer">
        <h1 class="pageTitle">PRODUTO - EDITAR</h1>
        <div class="table-responsive">
            <form action="/produtos/update" method="post">
            <table class="table table-striped table-bordered  table-hover">
                <thead class="thead-light ">
                    <tr>
                        <th class="text-center">Nome do Produto</th>
                        <th class="text-center">Preço</th>
                        <th class="text-center">Categoria</th>                    
                    </tr>
                </thead>
                <tbody>
                        <tr>
                            <td>
                                <input type="hidden" name="id" value="<%= produto.id %>">
                                <input class="form-control" type="text" name="nome" id="" placeholder="Nome do Produto" value="<%= produto.nomeProduto %>">
                            </td>                          
                            <td>
                                <input class="form-control" type="text" name="preco" id="" placeholder="Preço do Produto" value="<%= produto.preco %>">
                            </td>                          
                            <td>
                                <input class="form-control" type="text" name="categoria" id="" placeholder="Categoria do Produto" value="<%= produto.categoria %>">
                            </td> 
                        </tr>
                </tbody>
                <tfoot class="text-center">
                    <tr>
                        <td colspan="6">
                            <input class="btn btn-success"  type="submit" value="EDITAR PRODUTO">                               
                    </tr>
                    </td>
                </tfoot>
            </table>
        </form>                         
        </div>
    </div>
    <%- include ('partials/footer.ejs') %>